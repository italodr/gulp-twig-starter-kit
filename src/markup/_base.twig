<!doctype html>
<!--[if IE 9]>         <html class="no-js ie9"> <![endif]-->
<!--[if gt IE 9]><!--> <html class="no-js"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        {% set currentYear = 'now'|date('Y') %}
        <meta http-equiv="Cache-Control" content="max-age=31556926">
        <meta name="expires" content="{{'now'|date('D, d M')}} {{currentYear +1}}">

        <title>{{ Common.title }}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

        <link rel="canonical" href="{{ Common.canonical }}" />
        <meta name="description" content="{{ Common.description }}" />

        {% for key, value in Common.open_graph %}
        <meta property="og:{{ key }}" content="{{ value }}"/>
        {% endfor %}

        <link rel="stylesheet" href="{{ Routes.stylesheets }}styles.min.css" />

        <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
        <script>
        if(!window.Modernizr){
            var script = document.createElement('script');
            script.async = true;
            script.src = '{{ Routes.vendors }}modernizr.js';
            document.head.appendChild(script);
        }
        </script>
        <script src="{{ Routes.javascripts }}libs/grunticon-loader.js"></script>
        <script>
		grunticon([
			"{{ Routes.stylesheets }}sprite-svg.min.css",
			"{{ Routes.stylesheets }}sprite-png.min.css",
			"{{ Routes.stylesheets }}sprite-fallback.min.css"],
			grunticon.svgLoadedCallback );
		</script>
        {% block headerJs %}{% endblock %}
    </head>
    <body>

        {% include 'modules/header/base.twig' %}
        {% block content %}{% endblock %}
        {% include 'modules/footer/base.twig' %}

        <script src="{{ Routes.javascripts }}polyfills.js" async></script>
        <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
        <script>
        if(!window.jQuery){
            var script = document.createElement('script');
            script.async = true;
            script.src = '{{ Routes.vendors }}jquery.js';
            document.head.appendChild(script);
        }
        </script>
        <script src="{{ Routes.javascripts }}scripts.js" async></script>

        {% block javascripts %}{% endblock %}
    </body>
</html>
